    "version": "0.2.0",
    "configurations": [
        {
            "name": "ElCazador Terminal",
            "type": "coreclr",
            "request": "launch",
            "preLaunchTask": "build",
            "program": "${workspaceFolder}/ElCazador.Terminal/bin/Debug/netcoreapp2.1/ElCazador.Terminal.dll",
            "args": [],
            "cwd": "${workspaceFolder}",
            "stopAtEntry": false,
            "console": "integratedTerminal"
        }, 
        {
            "name": ".NET Core Attach",
            "type": "coreclr",
            "request": "attach",
            "processId": "${command:pickProcess}",
        }
    ]
}